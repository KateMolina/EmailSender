<UserControl x:Class="EmailSender.View.ListViewItemScheduler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmailSender.View"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="btnCallRbt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="25" Click="BtnCallRbt_Click">
            <Image Source="Images/Edit.png" Height="15"/>
        </Button>
        <xctk:TimePicker x:Name="lvTimePicker" Width="160" HorizontalAlignment="Stretch"/>
        <Button x:Name="btnDeleteDT" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="25" Click="BtnDeleteDT_Click">
            <Image Source="Images/calendarDelete.png" Height="15"/>
        </Button>
    </StackPanel>
</UserControl>
